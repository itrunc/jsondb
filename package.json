{
  "name": "@itrunc/jsondb",
  "version": "0.0.1",
  "private": false,
  "description": "Storage in filesystem with JSON file for NodeJS",
  "main": "index.js",
  "scripts": {
    "test": "mocha tests/**/*.test.js --reporter mochawesome --reporter-options reportDir=tests/results/general,reportFilename=report --exit",
    "test:single": "mocha tests/index.js --reporter mochawesome --reporter-options reportDir=tests/results/single,reportFilename=report --exit",
    "docs": "jsdoc2md -c jsdoc.json lib/*.js > README.md",
    "pub": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itrunc/jsondb.git"
  },
  "keywords": [
    "Storage"
  ],
  "author": "Ben P Q PAN",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/itrunc/jsondb/issues"
  },
  "homepage": "https://github.com/itrunc/jsondb#readme",
  "dependencies": {
    "async-validator": "^4.0.7",
    "debug": "^4.3.2",
    "fs-extra": "9.1.0",
    "uid": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "jsdoc": "^3.6.7",
    "jsdoc-to-markdown": "^7.0.1",
    "mocha": "^9.1.2",
    "mochawesome": "^6.2.2",
    "mockjs": "^1.1.0"
  },
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "tests"
  }
}
